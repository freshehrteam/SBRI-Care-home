definition
	OBSERVATION[at0000] matches {    -- Falls Risk Assessment Scale (Dudley Group NHSFT)
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					POINT_EVENT[at0002] occurrences matches {0..*} matches {    -- Any point in time event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0006] occurrences matches {0..1} matches {    -- Sex
										value matches {
											1|[local::at0007],
											2|[local::at0008]
										}
									}
									ELEMENT[at0009] occurrences matches {0..1} matches {    -- Age
										value matches {
											1|[local::at0010],
											2|[local::at0011],
											3|[local::at0012]
										}
									}
									ELEMENT[at0013] occurrences matches {0..*} matches {    -- Gait
										value matches {
											0|[local::at0014],
											1|[local::at0015],
											3|[local::at0016],
											3|[local::at0017]
										}
									}
									ELEMENT[at0018] occurrences matches {0..*} matches {    -- Sensory deficit
										value matches {
											2|[local::at0019],
											1|[local::at0020],
											2|[local::at0021]
										}
									}
									ELEMENT[at0022] occurrences matches {0..1} matches {    -- Fall history
										value matches {
											0|[local::at0023],
											2|[local::at0024],
											1|[local::at0025],
											3|[local::at0026]
										}
									}
									ELEMENT[at0027] occurrences matches {0..*} matches {    -- Medication
										value matches {
											1|[local::at0028],
											1|[local::at0029],
											1|[local::at0030],
											1|[local::at0044],
											1|[local::at0045],
											1|[local::at0046],
											1|[local::at0047]
										}
									}
									ELEMENT[at0031] occurrences matches {0..*} matches {    -- Medical history
										value matches {
											1|[local::at0032],
											1|[local::at0048],
											3|[local::at0033],
											2|[local::at0049],
											1|[local::at0050],
											1|[local::at0051]
										}
									}
									ELEMENT[at0034] occurrences matches {0..1} matches {    -- Mobility
										value matches {
											1|[local::at0035],
											2|[local::at0052],
											1|[local::at0053],
											3|[local::at0037],
											1|[local::at0038],
											1|[local::at0054],
											2|[local::at0036]
										}
									}
									ELEMENT[at0039] occurrences matches {0..1} matches {    -- Total score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..39|}
											}
										}
									}
									ELEMENT[at0040] occurrences matches {0..1} matches {    -- Interpretation
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0041,    -- Low risk
													at0042,    -- Medium risk
													at0043]    -- High risk
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0004] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0005] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

